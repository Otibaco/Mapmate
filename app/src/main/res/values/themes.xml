<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary branding -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/textColorWhite</item>

        <!-- Accent colors for buttons, toggles -->
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorOnSecondary">@color/textColorWhite</item>

        <!-- Background and system bars -->
        <item name="android:windowBackground">@color/lightBackground</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>

        <!-- Text -->
        <item name="colorOnBackground">@color/textColorBlack</item>
        <item name="android:textColorPrimary">?attr/colorOnBackground</item>

        <!-- Optional fullscreen -->
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>
